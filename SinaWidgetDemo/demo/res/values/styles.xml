<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="WYCustomTabPageIndicatorTemp" parent="Widget.TabPageIndicator">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textColor">@drawable/viewpager_title_textcolor</item>
    </style>

    <style name="WYCustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/viewpager_title_textcolor</item>
    </style>
    
    <style name="RadioGroupPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- 类网易新闻风格 -->
    <style name="WYStyledIndicators" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="focusCricleStyle">@style/News.FocusCricleIndicator</item>
        <item name="focusArrowStyle">@style/News.FocusArraowIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/WYCustomTabPageIndicator</item>
        <item name="vpiRadioGroupPageIndicatorStyle">@style/RadioGroupPageIndicator</item>
    </style>
    
    <style name="News.FocusArraowIndicator" parent="Widget">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="News.FocusCricleIndicator" parent="Widget">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="waitDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/wait_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
    </style>
    <style name="popwin_anim_style">  
     <item name="android:windowEnterAnimation">@anim/menushow</item>  
     <item name="android:windowExitAnimation">@anim/menuhide</item>  
	</style> 

</resources>