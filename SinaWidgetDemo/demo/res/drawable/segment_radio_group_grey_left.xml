<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/segment_radio_group_item_border_line" />

            <corners
                android:bottomLeftRadius="@dimen/segment_radio_group_item_radius"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/segment_radio_group_item_radius"
                android:topRightRadius="0dp" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/segment_radio_group_item_border"
        android:left="@dimen/segment_radio_group_item_border"
        android:top="@dimen/segment_radio_group_item_border">
        <shape>
            <solid android:color="@color/segment_radio_group_grey_item_bg" />

            <corners
                android:bottomLeftRadius="@dimen/segment_radio_group_item_radius"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/segment_radio_group_item_radius"
                android:topRightRadius="0dp" />

            <padding
                android:bottom="@dimen/segment_radio_group_item_padding"
                android:left="@dimen/segment_radio_group_item_padding"
                android:right="@dimen/segment_radio_group_item_padding"
                android:top="@dimen/segment_radio_group_item_padding" />
        </shape>
    </item>

</layer-list>