<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fc4e3b"
    tools:ignore="ContentDescription" >
    
    <LinearLayout android:orientation="vertical"
        android:id="@+id/guide3_layout1"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >
	    <ImageView
	            android:id="@+id/guide3_image_1"
	            android:layout_width="300dp"
	            android:layout_height="300dp"
	            android:src="@drawable/guide3_gift" />
	    
	    <ImageView
	            android:id="@+id/guide3_image_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/guide3_show" />
	     <ImageView
	            android:id="@+id/guide3_image_3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/guide3_97973" />
	</LinearLayout>
    
     <FrameLayout android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >
	     <ImageView
		            android:id="@+id/guide3_image_4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="350dp"
		            android:layout_marginLeft="60dp"
		            android:src="@drawable/guide3_rmb" />
	</FrameLayout>
	
      <TextView android:text="即刻体验"
                android:textColor="#fff2e9"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="23dp"
                android:layout_centerHorizontal="true"
	            android:id="@+id/guide3_exit_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
</RelativeLayout>