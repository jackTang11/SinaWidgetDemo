<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#88000000" >

    <RelativeLayout
        android:id="@+id/popup_animation_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <View
            android:id="@+id/top_blank"
            android:layout_width="fill_parent"
            android:layout_height="30dp" />

        <com.sina.sina973.custom.view.EntireSpaceGridView
            android:id="@+id/adapter_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_blank"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@color/transparent"
            android:horizontalSpacing="10dip"
            android:listSelector="#00000000"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dip" />

        <View
            android:id="@+id/bottom_line"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/adapter_view"
            android:background="#E8E9E8" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_line"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/share_lib_cancel"
            android:textColor="#ff000000"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>